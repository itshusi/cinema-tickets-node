{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "TicketPaymentService": ["src/thirdparty/paymentgateway/TicketPaymentService"],
      "SeatReservationService": ["src/thirdparty/seatbooking/SeatReservationService"]
    },
    "lib": ["ES2024"],
    "types": ["jest", "node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["test/**/*", "src/**/*"]
}
