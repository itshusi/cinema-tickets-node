{
  "name": "cinema-tickets-node",
  "description": "Cinema ticket booking service with TypeScript implementation following TDD principles",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.17.0"
  },
  "type": "module",
  "main": "./dist/pairtest/TicketService.js",
  "types": "./dist/pairtest/TicketService.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "test": "jest -c ./jest.config.mjs",
    "test:watch": "jest -c ./jest.config.mjs --watch",
    "test:coverage": "jest -c ./jest.config.mjs --coverage",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint:verbose": "eslint src/**/*.ts test/**/*.ts --format=stylish --debug",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "npm run build:watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "pretest": "npm run build",
    "docker:build": "docker build -t cinema-tickets .",
    "docker:run": "docker run -p 3000:3000 cinema-tickets"
  },
  "devDependencies": {
    "@eslint/js": "9.35.0",
    "@types/jest": "30.0.0",
    "@types/node": "22.18.3",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.4.0",
    "jest": "30.1.3",
    "jiti": "2.5.1",
    "prettier": "3.6.2",
    "ts-jest": "29.4.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.43.0"
  }
}